<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Characters"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/select_IMG_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:onClick="clickOnImage"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/teacher" />

                <ImageView
                    android:id="@+id/select_IMG_oldMan"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:onClick="clickOnImage"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/old_man" />

                <ImageView
                    android:id="@+id/select_IMG_ninja"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:onClick="clickOnImage"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ninja" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/select_IMG_man"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:onClick="clickOnImage"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/man" />

                <ImageView
                    android:id="@+id/select_IMG_king"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:onClick="clickOnImage"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/king" />

                <ImageView
                    android:id="@+id/select_IMG_donQuixote"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:onClick="clickOnImage"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/don_quixote" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/select_IMG_cowGirl"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:onClick="clickOnImage"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/cowgirl" />

                <ImageView
                    android:id="@+id/select_IMG_businessMan"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:onClick="clickOnImage"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/business_man" />

                <ImageView
                    android:id="@+id/select_IMG_banshee"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:onClick="clickOnImage"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/banshee" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/starter_TXT_split"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/starter_IMG_player1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/banshee" />

            <TextView
                android:id="@+id/starter_TXT_titleFight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize="30dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:text="VS" />

            <ImageView
                android:id="@+id/starter_IMG_player2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/teacher" />
        </LinearLayout>

        <Button
            android:id="@+id/starter_BTN_return"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_margin="4dp"
            android:text="return" />

    </LinearLayout>

</RelativeLayout>